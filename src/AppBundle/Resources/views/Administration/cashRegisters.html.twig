{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i><a href="{{path('AppBundle_Administration_home')}}">Administracija</a>
        </li>
        <li class="active">
            <i class="fa fa-file"></i>Naplatni uređaji
        </li>
    </ol>
    <div class="row administration-title">
        <a href="{{path('AppBundle_Administration_addCashRegister')}}"><button type="button" id="addOneItem" class="btn btn-lg btn-info col-md-2">
            Unesi novog
        </button></a>
    </div>

    <div class="row">
        <ul class="list-group col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Redni broj</th>
                        <th>Broj blagajne</th>
                        <th>Poslovni prostor</th>
                        <th>Opcije</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cashRegister in cashRegisters %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>{{cashRegister.number}}</td>
                            <td>{{cashRegister.office.label}}</td>
                            <td>
                                <a href="{{ path('AppBundle_Administration_editCashRegister', {'cashRegisterId': cashRegister.id})}}"> <button type="button" class="btn btn-xs btn-primary">Uredi</button></a>
                                <a href="{{ path('AppBundle_Administration_deleteCashRegister', {'cashRegisterId': cashRegister.id})}}"> <button type="button" class="btn btn-xs btn-danger">Izbriši</button></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </ul>
    </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{parent() }}

{% endblock %}